<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ticket_guide"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/ticket_guide_background"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:text="@string/ticket_cancel_guide"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ticket_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ticket_guide" />

        <TextView
            android:id="@+id/ticket_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/ticket_title"
            app:layout_constraintStart_toStartOf="@id/ticket_title"
            app:layout_constraintTop_toBottomOf="@id/ticket_title" />

        <TextView
            android:id="@+id/ticket_people_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ticket_seats"
            app:layout_constraintStart_toStartOf="@id/ticket_title"
            app:layout_constraintTop_toBottomOf="@id/ticket_date" />

        <TextView
            android:id="@+id/ticket_seats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ticket_title"
            app:layout_constraintStart_toEndOf="@id/ticket_people_count"
            app:layout_constraintTop_toBottomOf="@id/ticket_date" />

        <TextView
            android:id="@+id/ticket_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/ticket_title"
            app:layout_constraintStart_toStartOf="@id/ticket_title"
            app:layout_constraintTop_toBottomOf="@id/ticket_people_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>